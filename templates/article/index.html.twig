{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% set numberOfArticles = articles | length %}
    {% if numberOfArticles < 2 %}
    <h2>Il y a {{ numberOfArticles }} article disponnible</h2>
    {% else %}
    <h2>Il y a {{ numberOfArticles }} articles disponnibles</h2>
    {% endif %}


    {% for article in articles %}
        <ul>
            <li>Slug = {{ article.slug }}</li>
            <li>Titre = {{ article.name }}</li>
            <li>Contenu = {{ article.content }}</li>
        </ul>
    {% endfor %}
</div>
{% endblock %}
